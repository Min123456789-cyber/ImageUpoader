@model ImageUps.Models.Image

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card shadow rounded">
        <div class="card-header">
            <div class="bg-dark rounded">
                <h1 class="text-center text-center p-4 text-white">Details</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5">
                    <img src="~/images/@Model.ImageUrl" width="100%" style="border-radius: 50%;" class="rounded" />
                </div>
                <div class="col-lg-7">
                    <h1 class="text-center text-grey p-2">@Model.Title</h1>
                    <h5 class="text-black-50 p-2">@Model.Description</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <form method="post">
            <button type="submit" onclick="if(!confirm('Are you sure?')){return false}" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-auto">Delete</button>
        </form>
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</div>

